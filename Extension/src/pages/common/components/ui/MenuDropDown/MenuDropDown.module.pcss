.dropdownContainer {
    position: relative;
}

.dropdown {
    position: absolute;
    right: 0;
    width: 240px;
    top: calc(100% + 8px);
    padding: 0px 8px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-radius: 8px;
    background-color: white;
    z-index: 25;
}

.menuButton {
    background: transparent;
    border: 0;
}
