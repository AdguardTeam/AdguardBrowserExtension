.group {
    cursor: pointer;

    &-list {
        list-style: none;
        margin: 0;
        padding: 0;

        &--disabled {
            opacity: 0.5;
            pointer-events: none;
        }
    }

    &--disabled {
        & .setting__icon {
            color: var(--stroke-icons-gray-icons-default);
        }
    }

    &__checkbox {
        @media (min-width: 640px) {
            border-radius: 8px;
        }
    }
}
