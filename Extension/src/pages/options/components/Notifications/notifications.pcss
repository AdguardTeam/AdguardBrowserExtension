@keyframes notify-show {
    0% {
        transform: translateY(-100%);
        opacity: 0;
    }

    100% {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes notify-hide {
    0% {
        transform: translateY(0);
        opacity: 1;
    }

    100% {
        transform: translateY(100%);
        opacity: 0;
    }
}

.notifications {
    position: fixed;
    z-index: var(--z-idx-options-notifications);
    bottom: 72px;
    right: 16px;
}

.notification {
    padding: 8px;
    max-width: 344px;
    display: flex;
    align-items: flex-start;
    border-radius: 4px;
    background-color: var(--fills-snacks-mobile-snacks-default);
    color: var(--text-buttons-primary-default);
    animation: notify-show 0.3s ease-in;

    &--error > svg {
        color: var(--stroke-icons-error-icon-default);
    }

    &--success > svg {
        color: var(--stroke-icons-product-icon-default);
    }

    &--close {
        animation: notify-hide 1s ease-out;
    }

    &__content,
    &__content button {
        font-size: 16px;
        font-weight: 400;
        line-height: 21px;
        text-align: left;
    }

    &__content {
        padding: 0 12px;

        p {
            margin: 0;
            word-break: break-all;
        }

        button {
            padding: 0;
            margin-top: 8px;
            color: #67B279;
            background: transparent;
            border: none;
            cursor: pointer;
        }
    }

    &__btn-close {
        cursor: pointer;
        padding: 0;
        background: transparent;
        outline: none;
        border: none;
    }
}

.notification + .notification {
    margin-top: 16px;
}
