.events-search {
    display: flex;
    align-items: center;

    & input {
        border: none;
        width: 100%;
        background: var(--searchBg);
        border-radius: 5px;
        height: 40px;
        padding: 0 15px;

        &::placeholder {
            color: var(--gey6a);
        }

        &:focus {
            outline: none;
        }
    }

    &__clear {
        border: none;
        width: 13px;
        height: 13px;
        background-color: transparent;
        background-image: url(../../../../assets/icons/cross.svg);
        background-position: 100% 50%;
        background-repeat: no-repeat;
        background-size: 13px 13px;
        cursor: pointer;
        position: absolute;
        right: 35px;

        &:focus {
            outline: none;
        }
    }
}
