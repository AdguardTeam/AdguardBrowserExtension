.stats {
    padding: 8px 0;

    &:focus-visible {
        outline: 2px solid var(--outline);
        outline-offset: -2px;
    }

    &__list {
        font-size: 14px;
        line-height: 24px;
    }

    &__item {
        padding: 8px 16px;
        list-style: none;
        display: flex;
        justify-content: space-between;
        color: var(--text-main-text-main-default);
    }

    &__value {
        font-weight: 600;
    }
}
