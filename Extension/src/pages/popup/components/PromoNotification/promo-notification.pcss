@keyframes notify-show {
    0% {
        transform: translateY(200px);
    }

    100% {
        transform: translateY(0);
    }
}

@keyframes notify-show-reverse {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(200px);
    }
}

.promo-notification {
    position: fixed;
    font-family: 'Roboto Flex', 'Open Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Ubuntu, Arial, sans-serif;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 194px;
    background-size: cover;
    background-repeat: no-repeat;
    background-image: url('../assets/images/compare-light-23.svg');
    animation: notify-show 0.3s ease-in;
    transition: 0.3s ease transform;

    @media (prefers-color-scheme: dark) {
        background-image: url('../assets/images/compare-dark-23.svg');
    }

    &__close {
        position: absolute;
        top: 8px;
        right: 8px;
        cursor: pointer;
        padding: 0;
    }

    &__content {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 0 5px 0 75px;
    }

    &__title {
        white-space: pre-wrap;
        text-align: center;
        font-weight: 700;
        line-height: 29px;
        font-size: 24px;
        color: #4d4d4d;

        @media (prefers-color-scheme: dark) {
            color: #fff;
        }
    }

    &__btn {
        color: #fff;
        font-weight: 400;
        font-size: 16px;
        line-height: 24px;
        background-color: #67b279;
        padding: 12px 24px 12px 24px;
        min-width: 168px;
        border: 0;
        border-radius: 8px;
        margin-top: 14px;
    }
}

.light-mode {
    .promo-notification {
        background-image: url(../../../../../assets/images/compare-light-23.svg);

        &__title {
            color: #4d4d4d;
        }
    }
}

.dark-mode {
    .promo-notification {
        background-image: url(../../../../../assets/images/compare-dark-23.svg);

        &__title {
            color: #fff;
        }
    }
}
